<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvHolder"
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:cardBackgroundColor="@color/cranny_darkmode_adapter_background"
        app:strokeWidth="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvFriendBox"
            android:layout_width="300dp"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/cranny_darkmode_adapter_background"
            app:strokeWidth="3dp"
            app:strokeColor="@color/cranny_purple_blue"
            app:cardElevation="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">
            <!-- Profile Picture -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvPFPBorder"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:cardBackgroundColor="@color/cranny_darkmode_adapter_background"
                app:cardCornerRadius="65dp"
                android:layout_marginStart="15dp"
                android:layout_gravity="center_vertical"
                app:strokeColor="@color/cranny_purple_blue"
                app:strokeWidth="5dp">

                <ImageView
                    android:id="@+id/ivProfilePicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/default_profile_picture" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Username -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvAdapterUsernameBorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/cranny_darkmode_adapter_background"
                app:cardElevation="0dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="35dp">

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/raleway_custom"
                    android:text="\@123456789123456"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Send Request Button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvRequestButton"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_vertical"
                app:cardBackgroundColor="@color/cranny_darkmode_adapter_background"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp"
                app:strokeColor="@color/cranny_purple_blue"
                app:strokeWidth="2dp">

                <TextView
                    android:id="@+id/tvRequestButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/raleway_custom"
                    android:text="Send Request"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </com.google.android.material.card.MaterialCardView>

        </com.google.android.material.card.MaterialCardView>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>