<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvFriendBox"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cFriend_adapter_background"
        app:strokeWidth="1dp"
        app:strokeColor="@color/cFriend_adapter_stroke"
        app:cardElevation="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">

        <!-- Friend Profile Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvFriendProfileButton"
            android:layout_width="310dp"
            android:layout_height="90dp"
            app:cardBackgroundColor="@color/cFriend_adapter_profile_button_background"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:cardElevation="5dp">

            <!-- Profile Picture -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvPFPBorder"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:cardBackgroundColor="@color/cFriend_adapter_profile_button_background"
                app:cardCornerRadius="65dp"
                android:layout_marginStart="7.55dp"
                android:layout_marginTop="7.5dp"
                android:layout_marginBottom="7.5dp"
                app:strokeColor="@color/cFriend_adapter_pfp_stroke"
                app:strokeWidth="5dp">

                <ImageView
                    android:id="@+id/ivProfilePicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/default_profile_picture" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Username -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvAdapterUsernameBorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginStart="100dp"
                app:cardBackgroundColor="@color/cFriend_adapter_profile_button_background"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/raleway_custom"
                    android:text="\@123456789123456"
                    android:textColor="@color/cFriend_adapter_username_text"
                    android:textSize="20dp" />

            </com.google.android.material.card.MaterialCardView>

        </com.google.android.material.card.MaterialCardView>

        <!-- Book Container -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvBooksContainer"
            android:layout_width="310dp"
            android:layout_height="230dp"
            app:cardBackgroundColor="@color/cFriend_adapter_books_background"
            android:layout_marginTop="112dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp">

            <!-- Book Slot One -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvBook1"
                android:layout_width="75dp"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="left"
                app:cardBackgroundColor="@color/cFriend_adapter_books_background"
                android:layout_marginTop="10dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                app:strokeWidth="3dp"
                app:strokeColor="@color/cFriend_adapter_books_stroke">

                <ImageView
                    android:id="@+id/ivBook1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/example_bookcover" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Book Slot Two -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvBook2"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:layout_gravity="left"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/cFriend_adapter_books_background"
                android:layout_marginTop="10dp"
                android:layout_marginStart="117dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                app:strokeWidth="3dp"
                app:strokeColor="@color/cFriend_adapter_books_stroke">

                <ImageView
                    android:id="@+id/ivBook2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/example_bookcover" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Book Slot Three -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvBook3"
                android:layout_width="75dp"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/cFriend_adapter_books_background"
                android:layout_marginTop="10dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="22dp"
                android:layout_marginBottom="0dp"
                android:layout_gravity="right"
                app:strokeWidth="3dp"
                app:strokeColor="@color/cFriend_adapter_books_stroke">

                <ImageView
                    android:id="@+id/ivBook3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/example_bookcover" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Book Slot Four -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvBook4"
                android:layout_width="75dp"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="left"
                app:cardBackgroundColor="@color/cFriend_adapter_books_background"
                android:layout_marginTop="120dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                app:strokeWidth="3dp"
                app:strokeColor="@color/cFriend_adapter_books_stroke">

                <ImageView
                    android:id="@+id/ivBook4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/example_bookcover" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Book Slot Five -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvBook5"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/cFriend_adapter_books_background"
                android:layout_marginTop="55dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                app:strokeWidth="3dp"
                app:strokeColor="@color/cFriend_adapter_books_stroke">

                <ImageView
                    android:id="@+id/ivBook5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/example_bookcover" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Book Slot Six -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvBook6"
                android:layout_width="75dp"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/cFriend_adapter_books_background"
                android:layout_marginTop="120dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="22dp"
                android:layout_marginBottom="0dp"
                android:layout_gravity="right"
                app:strokeWidth="3dp"
                app:strokeColor="@color/cFriend_adapter_books_stroke">

                <ImageView
                    android:id="@+id/ivBook6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/example_bookcover" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvPrivateBooks"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:text="\@User's books are private"
                android:fontFamily="@font/raleway_custom"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/cFriend_adapter_inform_text"
                android:visibility="invisible"/>


        </com.google.android.material.card.MaterialCardView>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>