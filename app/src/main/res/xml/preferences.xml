<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    //setting the account to private or public
    <SwitchPreferenceCompat
    android:key="account_private"
    android:title="Account Privacy"
    android:summaryOff="Your account is currently public"
    android:summaryOn="Your account is currently private"
    android:defaultValue="false" />

    //toggling notifications
    <SwitchPreferenceCompat
        android:key="enable_notifications"
        android:title="Enable notifications"
        android:summary="Turn on/off notifications"
        android:defaultValue="true" />

    //changing username
    <EditTextPreference
        android:key="username"
        android:title="Change Username"
        android:summary="Click to change your username"
        android:dialogTitle="Enter new Username"
        android:inputType="text" />

    //changing display name
    <EditTextPreference
        android:key="display"
        android:title="Change Display Name"
        android:summary="Click to change your display name"
        android:dialogTitle="Enter new Username"
        android:inputType="text" />

    //changing bio
    <EditTextPreference
        android:key="bio"
        android:title="Change Bio"
        android:summary="Click to change your bio"
        android:dialogTitle="Enter new Username"
        android:inputType="text"
        />


</PreferenceScreen>